@{
    ViewBag.Title = "Şifremi Unuttum";
}

<h2>Şifremi Unuttum</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <label for="email">E-posta Adresiniz</label>
        <input type="email" name="email" class="form-control" placeholder="E-posta adresinizi girin" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Şifre Sıfırla</button>
}
