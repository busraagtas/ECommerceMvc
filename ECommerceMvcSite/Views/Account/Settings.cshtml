@model ECommerceMvcSite.Models.User

@{
    ViewBag.Title = "Ayarlar";
}

<h2>Hesap Bilgilerini Güncelle</h2>

@using (Html.BeginForm("UpdateUserInfo", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>Ad</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Soyad</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}
<hr />
<h2>Şifre Değiştir</h2>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>Eski Şifre</label>
        <input type="password" name="oldPassword" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Yeni Şifre</label>
        <input type="password" name="newPassword" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Yeni Şifre (Tekrar)</label>
        <input type="password" name="confirmPassword" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-warning">Şifreyi Değiştir</button>
}

@if (ViewBag.PasswordMessage != null)
{
    <div class="alert alert-info mt-3">@ViewBag.PasswordMessage</div>
}
<hr />
<h2>Adres Bilgisi Güncelle</h2>

@using (Html.BeginForm("UpdateAddress", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>Adres</label>
        <textarea name="newAddress" class="form-control" rows="4">@Model.Address</textarea>
    </div>
    <button type="submit" class="btn btn-success">Adresi Güncelle</button>
}
<h2>Telefon Numarası Güncelle</h2>

@using (Html.BeginForm("UpdatePhoneNumber", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>Telefon Numarası</label>
        <input type="text" name="newPhoneNumber" class="form-control" value="@Model.PhoneNumber" />
    </div>
    <button type="submit" class="btn btn-primary">Telefon Numarasını Güncelle</button>
}

@if (ViewBag.PhoneMessage != null)
{
    <div class="alert alert-info mt-3">@ViewBag.PhoneMessage</div>
}
