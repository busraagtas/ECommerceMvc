@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section FullWidthTop {
    <div id="mainCarousel" class="carousel slide mb-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mainCarousel" data-slide-to="1"></li>
            <li data-target="#mainCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">

            <!-- 1. Video Slide -->
            <div class="carousel-item active" data-interval="4000">
                <video class="d-block w-100" autoplay muted loop playsinline>
                    <source src="@Url.Content("~/Content/slider/slide1.mp4")" type="video/mp4">
                    Tarayıcınız video etiketini desteklemiyor.
                </video>
                <div class="carousel-caption d-none d-md-block">
                    <a href="/Products" class="btn btn-success btn-lg">Şimdi İncele</a>
                </div>
            </div>

            <!-- 2. Video Slide -->
            <div class="carousel-item" data-interval="4000">
                <video class="d-block w-100" autoplay muted loop playsinline>
                    <source src="@Url.Content("~/Content/slider/slide2.mp4")" type="video/mp4">
                </video>
                <div class="carousel-caption d-none d-md-block">
                    <a href="/Products" class="btn btn-primary btn-lg">Yeni Koleksiyon</a>
                </div>
            </div>

            <!-- 3. Video Slide -->
            <div class="carousel-item" data-interval="4000">
                <video class="d-block w-100" autoplay muted loop playsinline>
                    <source src="@Url.Content("~/Content/slider/slide3.mp4")" type="video/mp4">
                </video>
                <div class="carousel-caption d-none d-md-block">
                    <a href="/Products" class="btn btn-danger btn-lg">Fırsatları Gör</a>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Önceki</span>
        </a>
        <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Sonraki</span>
        </a>
    </div>
}
div class="category-section">
<h3>Kategoriler</h3>
<div class="row">
    @foreach (var category in ViewBag.Categories)
    {
        var imageUrl = string.IsNullOrEmpty(category.ImageUrl) ? Url.Content("~/Content/CategoryImages/Eğitici Oyuncaklar.jpg") : Url.Content(category.ImageUrl);
        <div class="col-md-3 category-item">
            <a href="@Url.Action("ListByCategory", "Products", new { categoryId = category.Id })">
                <img src="@imageUrl" alt="@category.Name" class="img-responsive" />
                <h4>@category.Name</h4>
            </a>
        </div>
    }

</div>
<style>
    .category-section {
        margin-top: 30px;
    }

    .category-item {
        text-align: center;
        margin-bottom: 20px;
    }

        .category-item img {
            max-width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
            cursor: pointer;
        }

        .category-item h4 {
            margin-top: 10px;
        }
</style>

<div class="homepage-container">
    <div class="hero" style="text-align:center; padding:50px; background-color:#f4f4f4;">
        <h1>Hoş Geldiniz!</h1>
        <p>Kaliteli ürünleri en uygun fiyatlarla bulabileceğiniz e-ticaret sitemize hoş geldiniz.</p>
        <a href="/Products" class="btn" style="padding:10px 20px; background-color:#28a745; color:white; text-decoration:none;">Ürünleri Görüntüle</a>
    </div>

    <div class="features" style="display:flex; justify-content:space-around; padding:40px;">
        <div style="width:30%; text-align:center;">
            <img src="~/Content/güvenli alışveriş.png" alt="Güvenli Alışveriş" style="width:80px;">
            <h3>Güvenli Alışveriş</h3>
            <p>256-bit SSL sertifikasıyla güvenli alışveriş.</p>
        </div>
        <div style="width:30%; text-align:center;">
            <img src="~/Content/destek.png" alt="Destek" style="width:80px;">
            <h3>7/24 Destek</h3>
            <p>Her zaman yanınızdayız.</p>
        </div>
        <div style="width:30%; text-align:center;">
            <img src="~/Content/hızlı teslimat.png" alt="Hızlı Teslimat" style="width:80px;">
            <h3>Hızlı Teslimat</h3>
            <p>Siparişleriniz aynı gün kargoda.</p>
        </div>
    </div>
</div>

<!-- JS: jQuery ve Bootstrap -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<!-- jQuery ve Bootstrap -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        // Carousel başlat
        $('#mainCarousel').carousel({
            interval: false, // Bootstrap kendi geçiş yapmasın
            ride: false
        });

        // Otomatik geçiş için kendi zamanlayıcımız
        let currentIndex = 0;
        const totalItems = $('.carousel-item').length;

        setInterval(function () {
            currentIndex++;
            if (currentIndex >= totalItems) {
                currentIndex = 0;
            }
            $('#mainCarousel').carousel(currentIndex);
        }, 4000); // Her 4 saniyede bir geçiş
    });
</script>

<script>
    // Sayfa yüklendikten sonra slider'ı çalıştır
    window.addEventListener("load", function () {
        setTimeout(function () {
            $('#mainCarousel').carousel({
                interval: 3000,
                ride: 'carousel'
            });
        }, 100);
    });
</script>

<style>
    .hero-slider {
        height: 100vh;
        position: relative;
        z-index: 0;
    }

        .hero-slider .carousel-inner,
        .hero-slider .carousel-item,
        .hero-slider .carousel-item video {
            height: 100vh;
            object-fit: cover;
        }

    #mainCarousel {
        height: 100vh;
    }

        #mainCarousel .carousel-item {
            height: 100vh;
        }

        #mainCarousel video {
            height: 100vh;
            width: 100%;
            object-fit: cover;
        }

    .homepage-container {
        margin-top: 0;
        padding-top: 0;
        background-color: white;
        z-index: 1;
        position: relative;
    }
</style>
