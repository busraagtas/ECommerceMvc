@model List<ECommerceMvcSite.Models.Product>

<h2>Admin Paneli</h2>

@if (TempData["Message"] != null)
{
    <p style="color:green">@TempData["Message"]</p>
}
<!-- Kart Stili Ürünler -->
<div class="container mt-4">
    

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

<div class="mb-3">
    <a href="@Url.Action("AddProduct", "Admin")" class="btn btn-success">Yeni Ürün Ekle</a>
    <!-- Bunu kullan -->
    <a href="@Url.Action("Index", "Category")" class="btn btn-primary">Kategorileri Düzenle</a>

</div>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <img src="@Url.Content(product.ImageUrl ?? "~/images/default.png")"
                         class="card-img-top"
                         alt="@product.Name"
                         style="height: 180px; object-fit: contain; padding: 10px; background-color: #f8f9fa;" />

                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-success fw-bold">@product.Price.ToString("N2") ₺</p>
                        <p class="card-text"><small>Stok: @product.Stock</small></p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" class="btn btn-primary btn-sm">Düzenle</a>
                            <form asp-action="Delete" asp-controller="Product" method="post" style="margin: 0;">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .product-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 20px;
        text-align: center;
        transition: transform 0.2s ease-in-out;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .product-card h3 {
        font-size: 18px;
        color: #333;
        margin: 10px 0 5px;
    }

    .product-card .description {
        color: #666;
        font-size: 14px;
        min-height: 50px;
    }

    .product-card .price {
        font-weight: bold;
        margin: 10px 0;
        color: #28a745;
    }

    .product-card .stock {
        font-size: 13px;
        color: #999;
    }

    .card-buttons {
        margin-top: 10px;
        display: flex;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 14px;
    }
</style>
