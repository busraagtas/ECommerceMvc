@model List<ECommerceMvcSite.Models.Message>

@{
    ViewBag.Title = "Mesajlar";
}

<h2>Mesajlar</h2>

@if (!Model.Any())
{
    <p>Hiç mesaj yok.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Gönderen</th>
                <th>Mesaj</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var msg in Model)
            {
                <tr>
                    <td>@msg.UserName (@msg.UserEmail)</td>
                    <td>@msg.Content.Substring(0, Math.Min(msg.Content.Length, 50))...</td>
                    <td>@msg.SentAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a href="@Url.Action("Details", "Message", new { id = msg.Id })" class="btn btn-sm btn-info">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
