@page
@{
    ViewBag.Title = "İletişim";
}

<h2>@ViewBag.Message</h2>

<form action="@Url.Action("Contact", "Home")" method="post">
    <div class="form-group">
        <label for="name">Ad Soyad</label>
        <input type="text" id="name" name="name" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="email">E-posta</label>
        <input type="email" id="email" name="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="message">Mesaj</label>
        <textarea id="message" name="message" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@if (ViewBag.Message == "Mesajınız başarıyla gönderildi!")
{
    <p>Mesajınız bizimle paylaşıldı. En kısa zamanda size geri dönüş yapacağız.</p>
}
else if (ViewBag.Message == "Lütfen tüm alanları doldurduğunuzdan emin olun!")
{
    <p style="color:red;">Lütfen tüm alanları doldurduğunuzdan emin olun!</p>
}
