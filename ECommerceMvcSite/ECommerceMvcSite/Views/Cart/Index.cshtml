@model List<ECommerceMvcSite.Models.Product>
@{
    ViewBag.Title = "Sepetim";
}

<h2>Sepetim</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="cart-table">
        <thead>
            <tr>
                <th>Ürün Resmi</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" alt="@item.Name" width="100" /></td>
                    <td>@item.Name</td>
                    <td>@item.Price ₺</td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.Id })" class="btn">Kaldır</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="checkout">
        <a href="@Url.Action("Checkout", "Cart")" onclick="alert('Bu sadece demo bir işlemdir. Gerçek bir sipariş oluşturulmayacak :)')" class="btn">Siparişi Onayla</a>
    </div>
}
else
{
    <p>Sepetiniz boş</p>
}
