@model List<ECommerceMvcSite.Models.Order>

<h2>Siparişlerim</h2>

@if (Model == null || !Model.Any())
{
    <p>Henüz siparişiniz yok.</p>
}
else
{
    foreach (var order in Model)
    {
        <p style="color:red">Debug: OrderId = @order.Id, Cancelled = @order.IsCancelled</p>
        <div style="border: 1px solid #ccc; padding: 15px; margin-bottom: 20px;">
            <p><strong>Tarih:</strong> @order.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
            <p><strong>Kullanıcı Email:</strong> @order.UserEmail</p>

            <table>
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>Fotoğraf</th>
                        <th>Adet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in order.Items)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>
                                <img src="@Url.Content(item.Product.ImageUrl)" alt="@item.Product.Name" width="100" />
                            </td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>

            <p><strong>İptal Durumu:</strong> @(order.IsCancelled ? "İptal Edilmiş" : "Aktif")</p>

            @if (!order.IsCancelled)
            {
                <form action="@Url.Action("IptalEt", "Order")" method="post" style="margin-top:10px;">
                    @Html.Hidden("orderId", order.Id)
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bu siparişi iptal etmek istediğinizden emin misiniz?');">
                        İptal Et
                    </button>
                </form>
            }
        </div>
    }
}
