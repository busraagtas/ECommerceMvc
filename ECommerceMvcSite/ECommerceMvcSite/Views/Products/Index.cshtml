@foreach (var product in Model)
{
    <div class="product-card">
        <!-- Ürün görseli -->
        <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" class="product-image" />

        <!-- Ürün bilgileri -->
        <div class="product-info">
            <h3>@product.Name</h3>
            <p>@product.Price ₺</p>
        </div>

        <!-- Sepete Ekle butonu -->
        <a href="@Url.Action("AddToCart", "Cart", new { productId = product.Id })" class="add-to-cart-btn">Sepete Ekle</a>
    </div>
}
