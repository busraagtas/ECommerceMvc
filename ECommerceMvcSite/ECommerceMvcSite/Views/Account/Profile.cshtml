@model ECommerceMvcSite.Models.User

@{
    ViewBag.Title = "Profilim - E-Ticaret Sitesi";
}

<h2>Profilim</h2>

<div class="profile-container">
    <div class="profile-menu">
        <ul>
            <li><a href="@Url.Action("MyOrders", "Account")">Siparişlerim</a></li>
            <li><a href="@Url.Action("ConfirmedOrders", "Account")">Onaylanan Siparişlerim</a></li>
            <li><a href="@Url.Action("CancelledOrders", "Account")">İptal Edilen Siparişlerim</a></li>
            <li><a href="@Url.Action("Contact", "Home")">Bize Ulaşın</a></li>
            <li><a href="@Url.Action("Settings", "Account")">Ayarlar</a></li>
            <li><a href="@Url.Action("Logout", "Account")">Çıkış Yap</a></li>
        </ul>
    </div>

    <div class="profile-details">
        <h3>Hesap Bilgileriniz</h3>
        <p><strong>Ad:</strong> @Model.FirstName</p>
        <p><strong>Soyad:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<style>
    .profile-container {
        display: flex;
    }

    .profile-menu {
        width: 20%;
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 5px;
        margin-right: 20px;
    }

        .profile-menu ul {
            list-style: none;
            padding: 0;
        }

            .profile-menu ul li {
                margin-bottom: 10px;
            }

                .profile-menu ul li a {
                    text-decoration: none;
                    color: #333;
                    font-size: 16px;
                }

                    .profile-menu ul li a:hover {
                        color: #007bff;
                    }

    .profile-details {
        width: 75%;
        padding: 20px;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .profile-details h3 {
            margin-bottom: 20px;
        }

        .profile-details p {
            font-size: 18px;
            line-height: 1.6;
        }
</style>
