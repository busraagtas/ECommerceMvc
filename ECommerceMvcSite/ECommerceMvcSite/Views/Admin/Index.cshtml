@model List<ECommerceMvcSite.Models.Product>

@{
    ViewBag.Title = "Admin Panel - Ürün Listesi";
}

<h2>Admin Panel - Ürün Listesi</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Görsel</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price ₺</td>
                <td>
                    <img src="@Url.Content(item.ImageUrl)" alt="Ürün Görseli" style="width: 100px;" />
                </td>
            </tr>
        }
    </tbody>
</table>
